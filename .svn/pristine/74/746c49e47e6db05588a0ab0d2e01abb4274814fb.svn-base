            newImage.put(MediaStore.MediaColumns.SIZE, bitmap.getByteCount());
            newImage.put(MediaStore.MediaColumns.WIDTH, bitmap.getWidth());
            newImage.put(MediaStore.MediaColumns.HEIGHT, bitmap.getHeight());
